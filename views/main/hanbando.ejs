    <style>
        a {
            color: black;
        }

        #content {
            margin-top: 40px;
            width: 100%;
            text-align: center;
        }

        #content .text {
            position: relative;
            font-family: "appleNeoB" !important;
            color: #707070;
            font-size: 43px;
        }

        #korea {
            margin: 60px auto 0 auto;
            width: 400px;
        }

        #korea img {
            width: 100%;
            height: 100%;
        }

        #question_mob,
        #question {
            width: 32px;
            position: absolute;
            right: 400px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            z-index: 100;

        }

        #question_mob img,
        #question img {
            width: 100%;
            height: 100%;
        }

        .question_window {
            position: absolute;
            left: 14px;
            transform: translateY(-23px);
            /* top: 50%; */
            /* transform: translate(calc(100% - 18px), -3%); */
            width: 300px;
            height: 340px;
            padding: 20px 20px 10px 20px;
            /* border: 1px solid black; */
            box-shadow: 0 0 11px 1px silver;
            background-color: white;
            border-radius: 30px;
        }

        .question_window .text {
            font-size: 25px !important;
        }

        .question_window .area:first-child {
            margin-top: 10px;
        }

        .question_window .area {
            font-size: 25px;
            margin-top: 7px !important;
        }

        .window_hide {
            visibility: hidden;
        }

        .window_show {
            visibility: visible;
        }

        @media(max-width:1500px) {

            #question_mob,
            #question {
                right: 19vw;
            }

            .question_window {
                transform: translate(calc(-100% + 17px), -23px);
            }
        }

        @media(max-width:1012px) {
            #content {
                margin-top: 15vw;
            }

            #content .text {
                font-family: "appleNeoB" !important;
                color: #707070;
                font-size: 6vw;
            }

            #korea {
                width: 68vw;
            }

            #question {
                display: inline-block;
                width: 5.5vw;
                right: 3.4vw;
                transform: translateY(-50%);
            }

            .question_window {
                width: 44vw;
                height: 73vw;
                transform: translate(calc(-100% + 3.7vw), 1vw);
                left: unset;
                top: unset;
            }

            .question_window .text {
                font-size: 4vw !important;
            }

            .question_window .area:first-child {
                margin-top: 3vw;
            }

            .question_window .area {
                font-size: 5vw;
                margin-top: 2vw !important;
            }
        }
    </style>
</head>

