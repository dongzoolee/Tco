<body>
    <%- include ("../header/header.ejs") %>

        <div class="w3-main" style="margin:0px 10%;">

            <header class="w3-container w3-theme" style="padding:32px 32px">
                <h1 class="w3-xxxlarge" style="font-weight: 650; padding: 16px;">TCO : TimeCapsule Corona</h1>
            </header>

            <div class="w3-container" style="padding:32px">

                <nav class="w3-sidebar w3-bar-block w3-collapse w3-animate-left w3-card"
                    style="z-index:3;width:250px;margin-top: 32px;" id="mySidebar">
